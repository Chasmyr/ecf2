{% extends 'base.html.twig' %}

{% block title %}Ajouter un fichier{% endblock %}

{% block stylesheets %}
<link rel="stylesheet" href="/css/form/form.css">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="form form-annexe">
            <div class="center">
                <h2>Ajouter un fichier d'annexe</h2>
            </div>

            {{ form_start(form) }}

            {{ form_row(form.title) }}
            {{ form_row(form.path) }}

            <div class="center">
                <button class="form-btn-succes" type="submit" class="">Valider</button>
            </div>
            

            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}